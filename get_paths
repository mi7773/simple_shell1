#include "shell.h"

char *get_path()
{
	return (getenv("PATH"));
}

char **get_path_directories(char *path)
{
	char **directories = NULL;
	char *token;
	int i = 0;

	directories = malloc(sizeof(char *) * MAX_ARGS);
	if (directories == NULL) {
		perror("Unable to allocate memory");
		exit(1);
	}

	token = strtok(path, ":");
	while (token != NULL) {
		directories[i++] = token;
		token = strtok(NULL, ":");
	}
	directories[i] = NULL;
	return (directories);
}

